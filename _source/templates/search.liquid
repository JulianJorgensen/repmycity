<!-- /templates/search.liquid -->

{% assign grid_results = false %}

{% assign respond_js_secret_key = shop.domain | md5 %}
{% unless search.terms == respond_js_secret_key %}

  {% paginate search.results by 12 %}

  {% if settings.show_breadcrumb %}
      {% include 'breadcrumb' %}
  {% endif %}

  <div class="grid--rev wrapper">
    <div class="grid__item large--three-quarters">

      <header class="section-header">
        {% if search.performed %}
          {% if search.results_count == 0 %}
            <h1 class="section-header__title  section-header__left">{{ 'general.search.no_results_html' | t: terms: search.terms }}</h1>
          {% else %}
            <h1 class="section-header__title  section-header__left">{{ 'general.search.results_for_html' | t: terms: search.terms }}</h1>
          {% endif %}
        {% else %}
          <h1 class="text-center">{{ 'general.search.title' | t }}</h1>
        {% endif %}
      </header>

      <div class="grid-uniform">

        {% if search.performed %}

          {% for product in search.results %}

            {% assign grid_item_width = 'large--one-third medium--one-half' %}

            {% include 'product-grid-item' %}
          {% endfor %}

        {% endif %}
      </div>

      {% if paginate.pages > 1 %}
        <hr>
        <div class="pagination">
          {{ paginate | default_pagination | replace: '&laquo; Previous', '&larr;' | replace: 'Next &raquo;', '&rarr;' }}
        </div>
      {% endif %}

    </div>

    <div class="grid__item large--one-quarter collection-sidebar">
      {% include 'collection-sidebar' %}
    </div>
  </div>

  {% endpaginate %}

{% else %}
  {% include 'respond' %}
  {% layout none %}
{% endunless %}
